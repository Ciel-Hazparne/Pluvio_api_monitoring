{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
{% block body %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <div class="card">
    <div class="card-header">
      <i class="fa fa-user font-large-1 float-left"></i>
      <h3>Connexion</h3>
    </div>
    <div class="card-body">
      <link rel="stylesheet" href="{{ asset('css/login.css') }}">
      <div class="grey-bg container-fluid">
        <section id="minimal-statistics">
          <div class="row">
          </div>
          <div class="row">
            <div class="col-xl-3 col-sm-6 col-12">
              <h4 class="text-white-50 mb-1" style="color: #1B2942 !important;">Email: </h4>
              <form action="{{ path('login') }}" method="post">
                <div class="form-outline form-white mb-4">
                  <input placeholder="Adresse email..." requied name="_username"
                         value="{{ lastUsername }}"
                         type="text" class="form-control form-control-lg">
                </div>
                <h4 class="text-white-50 mb-1" style="color: #1B2942 !important;">Mot de passe: </h4>
                <div class="form-form-outline form-white mb-1">
                  <input placeholder="Mot de passe..." requied name="_password"
                         type="password" class="form-control form-control-lg">
                  <div style="display: flex; justify-content: center;">
                  <button type="submit" class="btn btn-success mt-4">Connexion</button>
                  </div>

                </div>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
    <div class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top" id="footer">
      <div class="col-md-4 d-flex align-items-center">
        <span class="mb-3 mb-md-0 text-body-secondary">Pluvio Projet 2025</span>
      </div>
    </div>
  </div>
{% endblock %}